
@model Cliente;
@{
    ViewData["Title"] = "CadastroCliente";
}

    <form asp-action="CadastroCliente" asp-controller="Home" method="post">
        <main role="main">

            <section class="container" style="margin-top: 50px">
                <div class="row">
                    <aside class="col-sm-6">
                        <h3 class="subtitle-doc">
                            Cadastro de clientes
                        </h3>
                        <div id="code_register_1">
                            @if (TempData["MSG_S"] != null)
                            {
                                <p class="alert alert-success">@TempData["MSG_S"]</p>
                            }
                            <div class="card">
                                <header class="card-header">
                                    <a asp-controller="Home" asp-action="Login" class="float-right btn btn-outline-primary mt-1">Log in</a>
                                    <h4 class="card-title mt-2">Cadastro</h4>
                                </header>
                                <article class="card-body">

                                    <div class="form-row">
                                        <div class="col form-group">
                                            <label asp-for="nome">Nome</label>
                                            <input type="text" asp-for="nome" class="form-control" placeholder="">
                                            <span asp-validation-for="nome"></span>
                                        </div>
                                        <div class="col form-group">
                                            <label asp-for="nascimento">Nascimento</label>
                                            <input type="text" asp-for="nascimento" class="form-control" placeholder="">
                                            <span asp-validation-for="nascimento"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="CPF">CPF</label>
                                        <input type="text" asp-for="CPF" class="form-control" placeholder="">
                                        <span asp-validation-for="CPF"></span>
                                    </div>
                                    <div class="form-group">
                                        <label class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio"  asp-for="sexo" value="M">
                                            <span class="form-check-label"> Masculino </span>
                                        </label>
                                        <label class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio"  asp-for="sexo" value="F">
                                            <span class="form-check-label"> Feminino</span>
                                        </label>
                                      
                                        <span asp-validation-for="sexo"></span>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label asp-for="telefone">Telefone</label>
                                            <input type="text" asp-for="telefone" class="form-control">
                                            <span asp-validation-for="telefone"></span>
                                        </div>
                                    </div>

                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label asp-for="email">email</label>
                                            <input type="email" asp-for="email" class="form-control">
                                            <span asp-validation-for="email"></span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="senha">Senha</label>
                                        <input class="form-control" asp-for="senha" type="password">
                                        <span asp-validation-for="senha"></span>
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary btn-block"> Register </button>
                                    </div>

                                </article>
                                <div class="border-top card-body text-center">Já possui uma conta? <a asp-controller="Home" asp-action="Login">Entar</a></div>
                            </div>

                        </div>
                    </aside>
                </div>
            </section>


            <hr class="featurette-divider">


        </main>
    </form>